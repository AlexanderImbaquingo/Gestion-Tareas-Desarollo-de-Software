@model GestionTareasDesarrolloSoftware.MVC.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Gestión de Tareas</h1>
    <p class="lead">Sistema de gestión de proyectos y tareas para desarrollo de software</p>
    
    <div class="mt-5">
        <p class="text-muted">
            Bienvenido al sistema de gestión de tareas. Utiliza el menú de navegación superior 
            para acceder a las diferentes funcionalidades del sistema.
        </p>
    </div>
    
    <div class="row mt-5 justify-content-center">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-folder2 text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Proyectos</h5>
                    <p class="card-text text-muted">Gestiona y organiza todos tus proyectos de desarrollo</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-check2-square text-success" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Tareas</h5>
                    <p class="card-text text-muted">Administra las tareas individuales de cada proyecto</p>
                </div>
            </div>
        </div>
    </div>
</div>


